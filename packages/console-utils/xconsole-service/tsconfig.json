{
  "compilerOptions": {
    "outDir": "./lib",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2017", "es2018", "scripthost"],
    "baseUrl": ".",
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/*",
  ],
  "exclude": [
    "node_modules"
  ]
}